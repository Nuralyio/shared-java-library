<?xml v    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Nuraly Permissions</name>
    <description>Enterprise-grade ACL system with lightweight client library</description>
    <url>https://github.com/nuraly/permissions</url>
    
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    
    <developers>
        <developer>
            <id>nuraly</id>
            <name>Nuraly Development Team</name>
            <email>dev@nuraly.com</email>
            <organization>Nuraly</organization>
            <organizationUrl>https://nuraly.com</organizationUrl>
        </developer>
    </developers>
    
    <scm>
        <connection>scm:git:git://github.com/nuraly/permissions.git</connection>
        <developerConnection>scm:git:ssh://github.com:nuraly/permissions.git</developerConnection>
        <url>https://github.com/nuraly/permissions/tree/main</url>
